<h1  style=" border: 10px black" id="mv">categories</h1>
<hr style="color: black">


<div conatiner="fluid" style="margin: 80px">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-7">
            <div class="mv">
                <div class="upper">
                    <h2 style="text-align: center; font-size: 50px; margin-top: 50px"><bold>Products</bold></h2>
                </div>
                <form action="/categories" method="post" class="form">
                    <p>name</p>
                    <input type="text" name="name">
                    <p>tax</p>
                    <input type="text" name="tax"><br>
                    <td><input type="submit" value="Submit" class="btn user mv" style="width: 260px ;margin: 3px;border: 2px solid firebrick;"></td>
                </form>

                <br>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>

<div class="container">
    <table class="table table-hover">
        <thead style=" color: firebrick ">
        <tr>
            <th>Categorie Name</th>
            <th>Tax</th>
        </tr>
        </thead>
        <tbody id="lol">
        {{#each categories as |lol|}}
            <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.tax}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

