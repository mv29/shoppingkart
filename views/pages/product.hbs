<h1  style=" border: 10px black">products</h1>
<hr style="color: black">



<div conatiner="fluid" style="margin: 80px" id="list">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-7">
            <div class="mv">
                <div class="upper">
                    <h2 style="text-align: center; font-size: 50px; margin-top: 50px"><bold>Products</bold></h2>
                </div>
                <form action="/products" method="post" class="form">
                    <p>name</p>
                    <input type="text" name="name">
                    <p>Vendor</p>
                    <input type="text" name=vendor><br>
                    <p>price</p>
                    <input type="text" name="price"><br>
                    <p>categorie</p>
                    <input type="text" name="categorie"><br>
                    <p>imagelink</p>
                    <input type="text" name="image"><br>
                    <td><input type="submit" value="Submit" class="btn user mv" style="width: 260px ;margin: 3px;border: 2px solid firebrick;"></td>
                </form>
                <br>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>

<div class="container">
    <div class="row" id="catalogpage">
        {{#each item as |lol|}}
            <div class="col-md-4" style="margin-top:50px;">
                <div class="image">
                    <a href="{{this.image}}"><img class="products"src="{{this.image}}"></a>
                </div>
                <p style="width:350px;margin:2px;background-color:darkgrey;text-align: center">{{this.name}}</p>
                <p style="width:350px;margin:2px;background-color:darkgrey;text-align: center ">Price : <span class="fa fa-rupee"></span> {{this.price}}</p>
                <p style="width:350px;margin:2px;background-color:darkgrey;text-align: center ">Vendor :  {{this.vendor}}</p>
                <p style="width:350px;margin:2px;background-color:darkgrey;text-align: center ">Categorie : {{this.categorie.name}}</p>
                <p style="width:350px;margin:2px;background-color:darkgrey;text-align: center ">Tax :  {{this.categorie.tax}}%</p>
            </div>
        {{/each}}
    </div>
</div>
